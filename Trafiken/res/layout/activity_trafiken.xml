<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.vgsoftware.android.trafik"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<com.viewpagerindicator.TitlePageIndicator android:id="@id/mainTitlePageIndicator"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:textColor="#AA000000"
		app:selectedColor="#FF000000"
		app:selectedBold="true" />
	<android.support.v4.view.ViewPager android:id="@id/mainViewPager"
		android:layout_width="match_parent"
		android:layout_height="0dp"
    android:layout_weight="1" />
</LinearLayout>